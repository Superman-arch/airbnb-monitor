# Security Monitoring System Environment Variables
# Copy to .env and configure for your deployment

# Application
ENVIRONMENT=production
DEBUG=false
SECRET_KEY=change-this-to-a-very-long-random-string-in-production

# Database
DB_PASSWORD=secure_password_here
DATABASE_URL=postgresql://security:secure_password_here@localhost:5432/security_monitoring

# Redis
REDIS_PASSWORD=redis_password_here
REDIS_URL=redis://:redis_password_here@localhost:6379/0

# Authentication
DEFAULT_ADMIN_PASSWORD=change_this_admin_password

# Webhooks (for n8n integration)
WEBHOOK_URL=
PERSON_WEBHOOK_URL=
DOOR_WEBHOOK_URL=

# ML Models
ROBOFLOW_API_KEY=
DOOR_MODEL_ID=door-detection/1
YOLO_MODEL=yolov8m.pt

# Monitoring
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin_password_here
SENTRY_DSN=

# Jetson Settings
JETSON_MODE=true
USE_TENSORRT=true
USE_GPU=true
USE_NVMM_BUFFERS=true